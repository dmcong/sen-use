{
  "compilerOptions": {
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["dom", "dom.iterable", "esnext", "es2015"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"],
  "typedocOptions": {
    "entryPoints": ["./src/index.ts"],
    "out": "docs"
  }
}
